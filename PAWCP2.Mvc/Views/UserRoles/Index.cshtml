@model IEnumerable<PAWCP2.Mvc.Models.Role.UserRoleItemVm>
@{
    ViewData["Title"] = "User Roles";
}
<h2 class="mb-3">User Roles</h2>

@if (TempData["Ok"] != null) { <div class="alert alert-success">@TempData["Ok"]</div> }
@if (TempData["Error"] != null) { <div class="alert alert-danger">@TempData["Error"]</div> }

<table class="table table-striped">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.Username</td>
            <td>
                <form asp-action="Assign" method="post" class="d-flex gap-2">
                    <input type="hidden" name="userId" value="@row.UserId" />
                    <select class="form-select" name="roleId">
                        <option value="">-- Seleccione --</option>
                        @foreach (var r in row.Roles)
                        {
                            var isSelected = row.CurrentRoleId?.ToString() == r.Value;
                            <option value="@r.Value" selected="@(isSelected ? "selected" : null)">@r.Text</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </form>
            </td>
            <td></td>
        </tr>
    }
    </tbody>
</table>
